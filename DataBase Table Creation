CREATE TABLE users(id SERIAL PRIMARY KEY,firstname VARCHAR (30) NOT NULL,lastname VARCHAR (30) NOT NULL,role VARCHAR (30) NOT NULL,email VARCHAR (60) NOT NULL,password VARCHAR (255) NOT NULL,token VARCHAR (255) NOT NULL,status BOOLEAN DEFAULT TRUE,"createdAt" TIMESTAMP,"updatedAt" TIMESTAMP);

CREATE TABLE projects(id SERIAL PRIMARY KEY,name VARCHAR (80) NOT NULL,description text,"creatorId" integer NOT NULL,members integer[],finished BOOLEAN DEFAULT FALSE, "createdAt" TIMESTAMP,"updatedAt" TIMESTAMP);

CREATE TABLE documents(id SERIAL PRIMARY KEY,projectId integer NOT NULL,authorId integer NOT NULL,filename VARCHAR (250) NOT NULL,path VARCHAR (400) NOT NULL,versions integer[],validated BOOLEAN DEFAULT FALSE,published BOOLEAN DEFAULT FALSE,"createdAt" TIMESTAMP,"updatedAt" TIMESTAMP);

CREATE TABLE contents(id SERIAL PRIMARY KEY,content text,"documentId" integer NOT NULL,"createdAt" TIMESTAMP,"updatedAt" TIMESTAMP);

CREATE TABLE suggestions(id SERIAL PRIMARY KEY,documentId integer NOT NULL,authorId integer NOT NULL,content text[],"createdAt" TIMESTAMP,"updatedAt" TIMESTAMP);

CREATE TABLE comments(id SERIAL PRIMARY KEY,suggestionId integer NOT NULL,authorId integer NOT NULL,content text[],"createdAt" TIMESTAMP,"updatedAt" TIMESTAMP);











CREATE TABLE docs(
 id SERIAL PRIMARY KEY,
 filename VARCHAR (250) NOT NULL,
 relativename VARCHAR (250) NOT NULL,
 encoding VARCHAR (20) NOT NULL,
 extension VARCHAR (20) NOT NULL,
 path text NOT NULL,
 sizeinko int,
 content text,
 "createdAt" TIMESTAMP,
 "updatedAt" TIMESTAMP,
);

